<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change Password</title>
    <link rel="stylesheet" href="/css/userProfile.css">
</head>
<header>
    <div class="vbook-box">
        <a href="/home"><button class="vbook-btn">VBOOK4U</button></a>
    </div>
    <div class="search">
        <% if (userSession) { %>
                <button class="logout-btn" onclick="window.location.href='/logout'"> Logout </button>
            </a>
        <% } else { %>
            <a href="/login"><button class="signin-btn logout-btn">Sign In</button></a>
        <% } %>
    </div>
</header>
<body>
    <div class="container">
        <h2>Change Password</h2>

        <div id="errorMessages" class="flash-messages">
            <% if (errorMessage && errorMessage.length > 0) { %>
                <% errorMessage.forEach(function(message) { %>
                    <p class="flash-message error"><%= message %></p>
                <% }); %>
            <% } %>
            <% if (successMessage && successMessage.length > 0) { %>
                <% successMessage.forEach(function(message) { %>
                    <p class="flash-message success"><%= message %></p>
                <% }); %>
            <% } %>
        </div>

        <form action="/change-password" method="post" onsubmit="return validateForm()">
            <div class="form-group">
                <label for="currentPassword">Current Password:</label> <br>
                <input class="field-up" type="password" id="currentPassword" name="currentPassword" >
            </div>
            <div class="form-group">
                <label for="newPassword">New Password:</label> <br>
                <input class="field-up" type="password" id="newPassword" name="newPassword" required>
            </div>
            <div class="form-group">
                <label for="confirmNewPassword">Confirm New Password:</label> <br>
                <input class="field-up" type="password" id="confirmPassword" name="confirmPassword" required>
            </div>
            <div class="form-group">
                <button class="submit-btn" type="submit">Change Password</button>
            </div>
            
        </form>
    </div>
    <script src="/js/changePassword.js"></script>
</body>
</html>
